# Alias defenitions

# ls aliases
alias la='ls -A'
alias ll='ls -alF'
alias l='ls -CF'

# packages
alias yay='sudo dnf upgrade && flatpak update'  # dnf and flatpak updates
alias yeet='sudo dnf remove'                    # yeet a package lol
alias evide='sudo dnf search'                   # search for packages
alias pip-update='pip list -l --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U'

# vims
alias :q='exit'                                 # live in
alias :wq='exit'                                # vim
alias vim='nvim'
alias vi='nvim'
alias vit='/usr/bin/vi'

# misc.
alias pls='sudo $(fc -ln -1)'                   # run previous command as sudo
alias icat='kitty +kitten icat'                 # images in kitty
alias python='python3'                          # no, I'm not lazy
alias doom='~/.config/emacs/bin/doom'           # doom emacs bullshit

